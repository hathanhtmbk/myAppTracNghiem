<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView

           android:textSize="32dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#FA08B9C3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chào mừng bạn đến với ứng dụng trắc nghiệm của tôi"
            android:gravity="center_horizontal">
        </TextView>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:paddingBottom="10dp">
    <ImageView
        android:id="@+id/imghoa"
        android:layout_width="200dp"
        android:layout_height="165dp"
        android:layout_weight="1"
        android:src="@drawable/hoa" />
    <TextView
        android:textAlignment="center"
        android:textColor="#F2020F71"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="Các kiến thức liên quan môn hóa học"
        android:gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">
        <TextView
            android:textAlignment="center"
            android:textColor="#F2020F71"
            android:textStyle="bold"
            android:textSize="23dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Các kiến thức liên quan môn toán học"
            android:gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/imgtoan"
            android:layout_width="200dp"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:src="@drawable/toan" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgly"
            android:layout_width="200dp"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:src="@drawable/vatli" />
        <TextView
            android:textAlignment="center"
            android:textColor="#F2020F71"
            android:textStyle="bold"
            android:textSize="23dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Các kiến thức liên quan môn vật lý"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>

</FrameLayout>